{
  "compilerOptions": {
    "allowJs": false,
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017",
    "esModuleInterop": true,
    "baseUrl": "./packages",
    "paths": {
      "serialport": ["./serialport/lib"],
      "@serialport/*": ["./*/lib"]
    }
  },
  "exclude": [
    "node_modules",
    "*/**/*-test.ts",
    "*/**/dist"
  ]
}
